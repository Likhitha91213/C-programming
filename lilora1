#include <stdio.h>
main()
{
    double n,s=0,i;
    printf("enter the number\n");
    scanf("%lf",&n);
    for (i=1;i<=n;i++)
    {
        s=s+(1/i);
        if (i==1)
        {
            printf("1+");
        }
        else if(i==n)
        {
            printf("(1/%lf)",i);
        }
        else
        {
            printf("(1/%lf)+",i);
        }
    }
    printf("The sum of the given series is %lf\n",s);
}
